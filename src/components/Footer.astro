---
import { footNavContents } from '@data/footnav';
---

<footer
  class="max-w-full pt-4 md:pt-6 text-base md:text-sm text-gray-700 dark:text-gray-400 pb-7 text-center"
>
  <ul class="md:flex mb-4 md:mb-0 gap-10 right-0">
        {footNavContents.map((item) => (
        <li>
          <a class="font-bold hover:text-blue-600 dark:hover:text-blue-500 md:p-0 transition-colors duration-200"
            href={item.slug}>{item.title}</a>
        </li>
        ))}
  </ul>
  <a class="menu-item block mt-1 hover:text-blue-600 dark:hover:text-blue-500 transition-colors duration-200" href="mailto:contact@morrismotel.com"
    >contact@morrismotel.com
  </a>
  <span class="block mt-1">&copy; {new Date().getFullYear()} Morris Motel</span>
</footer>
