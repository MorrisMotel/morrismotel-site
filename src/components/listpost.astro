---
const post = Astro.props.post;
import { Icon } from 'astro-icon';
---

<li class="mb-[0.15rem]">
  <a
    href={`/posts/${post?.slug || post?.frontmatter?.slug}`}
    class="transition-colors duration-200 hover:text-blue-600 dark:hover:text-blue-500"
  >
    <Icon name="heroicons-outline:chevron-right" class="h-4 w-4 inline mb-1" />
    {post.title}
  </a>
</li>
