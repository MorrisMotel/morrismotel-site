---
const siteInfo = {
  siteName: 'Morris Motel',
  siteDesc:
    'Your one stop shop for all things about sailing the high seas. From quick guides on music acquisition to full servarr setups, we have you covered.',
};

const content = Astro.props;

let title = content.title ? content.title : siteInfo.siteName;
let desc = content.description ? content.description : siteInfo.siteDesc;
let img = content.image ? content.image : '/images/logo.png';
---

<head>
  <!-- essential -->
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />

  <!-- core -->
  <title>{title}</title>
  <meta name="description" content={desc} />

  <!-- twitter -->
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={desc} />
  <meta name="twitter:image:alt" content={title} />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:image" content={img} />

  <!-- og -->
  {content.title && <meta property="og:site_name" content={title} />}
  <meta property="og:image:alt" content={title} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={desc} />
  <meta property="og:image" content={img} />
  <meta property="og:type" content="object" />
  <meta property="og:url" content={Astro.site} />

  <!-- favicons & things -->
  <link
    rel="apple-touch-icon"
    sizes="180x180"
    href="/favicons/apple-touch-icon.png"
  />
  <link
    rel="icon"
    type="image/png"
    sizes="32x32"
    href="/favicons/favicon-32x32.png"
  />
  <link
    rel="icon"
    type="image/png"
    sizes="16x16"
    href="/favicons/favicon-16x16.png"
  />
  <link rel="manifest" href="/favicons/site.webmanifest" />
  <link rel="mask-icon" href="/favicons/safari-pinned-tab.svg" color="#fefefe"
  />
  <meta name="msapplication-TileColor" content="#fefefe" />
  <meta
    name="theme-color"
    content="#010101"
    media="(prefers-color-scheme: dark)"
  />
  <meta
    name="theme-color"
    content="#fefefe"
    media="(prefers-color-scheme: light)"
  />

  <script async defer src="https://api.morrismotel.com/latest.js"></script>
  <noscript>
    <img 
      src="https://api.morrismotel.com/noscript.gif" 
      alt="" 
      referrerpolicy="no-referrer-when-downgrade"
    />
  </noscript>
  
  <slot />
</head>
